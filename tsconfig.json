{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/client/*"
      ]
    },
    "outDir": "build",
    "typeRoots": ["node_modules/@types", "types"],
    "allowJs": true,
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "jsx": "react",
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "build",
    "typings/main",
    "typings/main.d.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useCache": true,
    "useBabel": true
  }
}
